<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed == false %>
    <input type="checkbox" id="task-false" name="task-false">
    <label for="task-false">This task is not completed</label>
<% else %>
    <input type="checkbox" id="task-true" name="task-true" checked>
    <label for="task-true">This task is completed</label>
<% end %>

<p><%= link_to 'Back to tasks list', tasks_path %></p>

<%= button_to "Edit Task", edit_task_path, :method => "get" %>

